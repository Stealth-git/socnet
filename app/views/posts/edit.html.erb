<div class="col-md-8">
    <form action="/posts/update/<%= @post.id %>" method="POST">
    <div class="form-group">
        <label for="title">heading</label>
        <input type="text" name="post[title]" value="<%= @post.title %>" class="form-control">
    </div>
    <div class="form-group" name="post[topic_id]">
        <label for="exampleFormControlSelect1">Select a topic</label>
        <select class="form-control">
        <% @topics.each do |topic| %>
        <option value="<%= topic.id %>" <% if @post.topic_id == topic.id %>selected=selected <% end %>><%= topic.title %></option>
        <% end %>
        </select>
    </div>
    <div class="form-group">
        <label>Text:</label>
        <textarea name="post[body]" class="form-control" rows="10"><%= @post.body %></textarea>
    </div>
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>